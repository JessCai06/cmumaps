{
  "entryFile": "server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/*.ts"],
  "spec": {
    "securityDefinitions": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "basePath": "/api",
    "outputDirectory": "build",
    "specVersion": 3,
    "yaml": true
  },
  "routes": {
    "routesDir": "build",
    "authenticationModule": "./src/middleware/authentication.ts"
  }
}
