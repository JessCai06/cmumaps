{
  "entryFile": "server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/*.ts"],
  "spec": {
    "securityDefinitions": {
      "oauth2": {
        "type": "oauth2",
        "flow": "implicit",
        "authorizationUrl": "https://auth.slabs-dev.org/application/o/authorize/",
        "scopes": {}
      }
    },
    "basePath": "/api",
    "outputDirectory": "build",
    "specVersion": 3,
    "yaml": true
  },
  "routes": {
    "routesDir": "build",
    "authenticationModule": "./src/middleware/authentication.ts"
  }
}
