{
  "name": "@cmumaps/server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node dist/index.cjs",
    "build": "bun build index.ts --outdir=dist --target=bun",
    "server": "dotenv -e .env -- tsx watch index.ts",
    "tsoa": "onchange '**/*.ts' '!build/**' -- tsoa spec-and-routes",
    "openapi": "openapi-typescript ./build/swagger.yaml -o ./build/swagger.d.ts",
    "dev": "concurrently \"bun run server\" \"bun run tsoa & bun run openapi\"",
    "dev:host": "bun run dev",
    "db-generate": "prisma generate",
    "format": "biome format",
    "lint": "biome lint",
    "tsc": "tsc -b",
    "check": "tsc -b && biome check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@clerk/express": "^1.3.52",
    "@cmumaps/common": "workspace:*",
    "@cmumaps/websocket": "workspace:*",
    "@prisma/client": "^6.8.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "tsoa": "^6.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^20.11.24",
    "concurrently": "^9.2.0",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.23.0",
    "globals": "^16.0.0",
    "onchange": "^7.1.0",
    "openapi-typescript": "^7.8.0",
    "prisma": "^6.8.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
