generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Building {
  buildingCode   String  @id
  name           String
  osmId          String?
  labelLatitude  Float
  labelLongitude Float
  shape          Json
  hitbox         Json
  defaultOrdinal Int?
  floors         Floor[]
}

model Floor {
  buildingCode    String
  floorLevel      String
  isDefault       Boolean
  centerX         Float
  centerY         Float
  centerLatitude  Float
  centerLongitude Float
  scale           Float
  angle           Float
  altitude        Float?
  building        Building @relation(fields: [buildingCode], references: [buildingCode])
  Node            Node[]

  @@id([buildingCode, floorLevel])
}

model Room {
  roomId         String  @id
  name           String
  type           String
  labelLatitude  Float
  labelLongitude Float
  polygon        Json
  buildingCode   String?
  floorLevel     String?
  aliases        Alias[]
  nodes          Node[]

  @@index([buildingCode, floorLevel])
}

model Alias {
  alias          String
  isDisplayAlias Boolean
  roomId         String
  room           Room    @relation(fields: [roomId], references: [roomId])

  @@id([roomId, alias])
}

model Node {
  nodeId       String  @id
  latitude     Float
  longitude    Float
  buildingCode String?
  floorLevel   String?
  roomId       String?
  outEdges     Edge[]  @relation("OutEdges")
  inEdges      Edge[]  @relation("InEdges")
  floor        Floor?  @relation(fields: [buildingCode, floorLevel], references: [buildingCode, floorLevel])
  room         Room?   @relation(fields: [roomId], references: [roomId])
  poi          Poi?

  @@index([buildingCode, floorLevel])
}

model Edge {
  inNodeId  String
  outNodeId String
  inNode    Node   @relation("OutEdges", fields: [inNodeId], references: [nodeId])
  outNode   Node   @relation("InEdges", fields: [outNodeId], references: [nodeId])

  @@id([inNodeId, outNodeId])
}

model Poi {
  poiId  String @id
  type   String
  nodeId String @unique
  node   Node   @relation(fields: [nodeId], references: [nodeId])
}

model EventOccurrences {
  eventId           String
  startTime         DateTime
  endTime           DateTime
  locationId        String
  eventOccurrenceId String    @id
  Events            Events    @relation(fields: [eventId], references: [eventId])
  Locations         Locations @relation(fields: [locationId], references: [locationId])
}

model EventTracks {
  eventId   String
  trackName String
  Events    Events @relation(fields: [eventId], references: [eventId])
  Tracks    Tracks @relation(fields: [trackName], references: [trackName])

  @@id([eventId, trackName])
}

model Events {
  eventId          String             @id
  title            String
  description      String
  req              String?
  EventOccurrences EventOccurrences[]
  EventTracks      EventTracks[]
}

model Locations {
  locationId       String             @id
  locationName     String
  latitude         Float?
  longitude        Float?
  EventOccurrences EventOccurrences[]
}

model Tracks {
  trackName   String        @id
  EventTracks EventTracks[]
}
